<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_backgrounds">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="5dp"
                tools:ignore="UseCompoundDrawables">


                <Button
                    android:id="@+id/btn_manage_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:onClick="expandableButtonNotifications"
                    android:padding="8dp"
                    android:text="Manage Notifications"
                    android:textColor="#fff" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_Invite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:onClick="expandableButtonInvite"
                android:padding="8dp"
                android:text="Invite Friends"
                android:textColor="#fff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="5dp"
                tools:ignore="UseCompoundDrawables">

                <Button
                    android:id="@+id/btn_expandableTermsC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:onClick="expandableButtonTerms"
                    android:padding="8dp"
                    android:text="terms_amp_conditions_settings"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:orientation="horizontal"
                android:padding="5dp"
                tools:ignore="UseCompoundDrawables">

                <Button
                    android:id="@+id/btn_expandablePrivacyP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:onClick="expandableButtonPrivacy"
                    android:padding="8dp"
                    android:text="Privacy Policy"
                    android:textColor="#fff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:orientation="horizontal"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="5dp"
                    tools:ignore="UselessParent">

                    <Button
                        android:id="@+id/btn_expandableSendFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:onClick="expandableButtonSendF"
                        android:padding="8dp"
                        android:text="Send Feedback"
                        android:textColor="#fff" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:orientation="horizontal"
                android:padding="8dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="5dp"
                    tools:ignore="UselessParent">

                    <Button
                        android:id="@+id/btn_expandableChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:onClick="expandableButtonChangePassword"
                        android:padding="8dp"
                        android:text="Change Password"
                        android:textColor="#fff" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:orientation="horizontal"
                android:padding="5dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Version"
                        android:textColor="#fff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Version 1.0.0-Lite"
                        android:textColor="#ffffff" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:baselineAligned="false"
                android:gravity="center"
                android:onClick="expandableAbout"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:text="About I-Find App"
                android:textColor="#fff" />

<!--            <com.github.aakira.expandablelayout.ExpandableRelativeLayout-->
<!--                android:id="@+id/layout_expandableAbout"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@drawable/et_ui"-->
<!--                android:padding="16dp"-->
<!--                app:ael_duration="400"-->
<!--                app:ael_expanded="false"-->
<!--                app:ael_interpolator="bounce"-->
<!--                app:ael_orientation="vertical">-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I-Find App is the app which makes it easier for people(s) to find their lost  items/goods,lost/found or missing person(s) and childrens.You find what you looking for by going through the posted things within the application,text the person who posted the missing person or whatsoever and provide proofs to ensure whatever is posted it belongs to you.It is advisable that you meet up to the nearest police station to get your items for security reasons"
                    android:textColor="@color/white" />
<!--            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>-->

        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
